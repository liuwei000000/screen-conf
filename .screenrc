ome environment setting
vbell off
autodetach on
startup_message off
shell -$SHELL
altscreen on

defscrollback 1024
# buttom status bar
#caption always “%{=u .G} %-w%<%{=ub .y}%n %t%{=u .G}%+w ”
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rY}%n %t%{-}%+w %=%{..G} %H %{..Y} %y/%m/%d %c:%s"

escape ^Zz
